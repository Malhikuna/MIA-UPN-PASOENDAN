generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  Session  Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Umkm {
  id           String                                @id @default(uuid())
  name         String
  address      String?
  mainCategory String?
  subCategory  String?
  description  String?
  whatsApp     String?
  imageUrl     String[]
  lat          Float
  lng          Float
  product      Product[]
  geom         Unsupported("geography(Point, 4326)")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([geom], type: Gist)
}

model Product {
  id          String @id @default(uuid())
  name        String
  description String
  price       Float
  umkm        Umkm   @relation(fields: [umkmId], references: [id])
  umkmId      String
}
